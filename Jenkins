pipeline {

    agent {
        docker {
            image 'python:3.7.4-alpine3.10'
        }
    }

    stages {
        stage('Test') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'py.test --verbose --cov-report term --cov-report html --cov=myapp --junit-xml test-reports/results.xml tests/'
	        }
            post {
                always {
                    junit 'test-reports/results.xml'
                    publishHTML target: [
                            allowMissing         : false,
                            alwaysLinkToLastBuild: false,
                            keepAll              : true,
                            reportDir            : 'htmlcov',
                            reportFiles          : 'htmlcov/index.html',
                            reportName           : 'Coverage Report'
                        ]
                }
            }
        }
    }
}
